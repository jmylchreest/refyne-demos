<style>
  .spinner-large {
    width: 48px;
    height: 48px;
    border: 4px solid #e5e7eb;
    border-top-color: #f59e0b;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>

<script>
  const urlFormContainer = document.getElementById('url-form-container');
  const progressContainer = document.getElementById('progress-container');
  const saveForm = document.getElementById('save-form');
  const errorContainer = document.getElementById('error-container');
  const errorMessage = document.getElementById('error-message');

  const urlInput = document.getElementById('url-input') as HTMLInputElement;
  const extractBtn = document.getElementById('extract-btn');
  const tryAnotherBtn = document.getElementById('try-another-btn');

  const progressStatus = document.getElementById('progress-status');
  const progressTime = document.getElementById('progress-time');
  const progressBar = document.getElementById('progress-bar');

  let pollInterval: ReturnType<typeof setInterval> | null = null;
  let startTime: number = 0;
  let elapsedInterval: ReturnType<typeof setInterval> | null = null;

  function showError(msg: string) {
    errorMessage!.textContent = msg;
    errorContainer!.classList.remove('hidden');
  }

  function hideError() {
    errorContainer!.classList.add('hidden');
  }

  function showUrlForm() {
    urlFormContainer!.classList.remove('hidden');
    progressContainer!.classList.add('hidden');
    saveForm!.classList.add('hidden');
    resetExtractBtn();
  }

  function showProgress() {
    urlFormContainer!.classList.add('hidden');
    progressContainer!.classList.remove('hidden');
    saveForm!.classList.add('hidden');
    hideError();
  }

  function showSaveForm(data: any) {
    urlFormContainer!.classList.add('hidden');
    progressContainer!.classList.add('hidden');
    saveForm!.classList.remove('hidden');
    populatePreview(data);
  }

  function resetExtractBtn() {
    if (extractBtn) {
      extractBtn.querySelector('.btn-text')?.classList.remove('hidden');
      extractBtn.querySelector('.btn-loading')?.classList.add('hidden');
      extractBtn.removeAttribute('disabled');
    }
  }

  function setExtractBtnLoading() {
    if (extractBtn) {
      extractBtn.querySelector('.btn-text')?.classList.add('hidden');
      extractBtn.querySelector('.btn-loading')?.classList.remove('hidden');
      extractBtn.setAttribute('disabled', 'true');
    }
  }

  function updateElapsed() {
    const elapsed = Math.floor((Date.now() - startTime) / 1000);
    progressTime!.textContent = `Elapsed: ${elapsed}s`;
    // Slowly increase progress bar (never reaches 100% until complete)
    const progress = Math.min(10 + (elapsed * 0.5), 90);
    progressBar!.style.width = `${progress}%`;
  }

  function startElapsedTimer() {
    startTime = Date.now();
    elapsedInterval = setInterval(updateElapsed, 1000);
  }

  function stopElapsedTimer() {
    if (elapsedInterval) {
      clearInterval(elapsedInterval);
      elapsedInterval = null;
    }
  }

  function populatePreview(data: any) {
    // Set hidden form data
    const tutorialInput = document.getElementById('tutorial-data') as HTMLInputElement;
    tutorialInput.value = JSON.stringify(data);

    // Title & Overview
    document.getElementById('preview-title')!.textContent = data.title || 'Untitled';
    document.getElementById('preview-overview')!.textContent = data.overview || '';

    // Image
    const imageContainer = document.getElementById('preview-image');
    const imageSrc = document.getElementById('preview-image-src') as HTMLImageElement;
    if (data.image_url) {
      imageSrc.src = data.image_url;
      imageSrc.alt = data.title || '';
      imageContainer!.classList.remove('hidden');
    } else {
      imageContainer!.classList.add('hidden');
    }

    // Meta (difficulty, time)
    const metaContainer = document.getElementById('preview-meta')!;
    metaContainer.innerHTML = '';
    if (data.difficulty) {
      metaContainer.innerHTML += `
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          ${data.difficulty}
        </span>
      `;
    }
    if (data.estimated_time) {
      metaContainer.innerHTML += `
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          ${data.estimated_time}
        </span>
      `;
    }

    // Glossary
    const glossaryContainer = document.getElementById('preview-glossary')!;
    const glossaryItems = document.getElementById('glossary-items')!;
    if (data.glossary?.length > 0) {
      document.getElementById('glossary-count')!.textContent = `Glossary (${data.glossary.length} terms)`;
      glossaryItems.innerHTML = data.glossary.slice(0, 4).map((term: any) =>
        `<div><strong>${term.term}</strong>: ${term.definition.length > 60 ? term.definition.slice(0, 60) + '...' : term.definition}</div>`
      ).join('');
      if (data.glossary.length > 4) {
        glossaryItems.innerHTML += `<div class="text-blue-600 dark:text-blue-400">+ ${data.glossary.length - 4} more terms...</div>`;
      }
      glossaryContainer.classList.remove('hidden');
    } else {
      glossaryContainer.classList.add('hidden');
    }

    // Materials
    document.getElementById('materials-count')!.textContent = `Materials (${data.materials?.length || 0})`;
    const materialsItems = document.getElementById('materials-items')!;
    materialsItems.innerHTML = (data.materials?.slice(0, 5) || []).map((mat: any) => {
      let text = mat.quantity ? `${mat.quantity} ` : '';
      text += mat.name;
      if (mat.measurement) {
        text += ` <span class="text-xs text-gray-400" title="${mat.measurement.metric} / ${mat.measurement.imperial}">[${mat.measurement.original}]</span>`;
      }
      return `<li class="flex items-start gap-1"><span class="text-green-600">&bull;</span><span>${text}</span></li>`;
    }).join('');
    if (data.materials?.length > 5) {
      materialsItems.innerHTML += `<li class="text-gray-400">+ ${data.materials.length - 5} more...</li>`;
    }

    // Tools
    document.getElementById('tools-count')!.textContent = `Tools (${data.tools?.length || 0})`;
    const toolsItems = document.getElementById('tools-items')!;
    toolsItems.innerHTML = (data.tools?.slice(0, 5) || []).map((tool: any) => {
      const bullet = tool.required ? '<span class="text-orange-600">&bull;</span>' : '<span class="text-gray-400">&#9675;</span>';
      const optional = !tool.required ? '<span class="text-xs text-gray-400 ml-1">(optional)</span>' : '';
      return `<li class="flex items-start gap-1">${bullet}<span>${tool.name}${optional}</span></li>`;
    }).join('');
    if (data.tools?.length > 5) {
      toolsItems.innerHTML += `<li class="text-gray-400">+ ${data.tools.length - 5} more...</li>`;
    }

    // Steps
    document.getElementById('steps-count')!.textContent = `Steps (${data.steps?.length || 0})`;
    const stepsItems = document.getElementById('steps-items')!;
    stepsItems.innerHTML = (data.steps?.slice(0, 4) || []).map((step: any) =>
      `<li class="truncate">${step.step_number}. ${step.title}</li>`
    ).join('');
    if (data.steps?.length > 4) {
      stepsItems.innerHTML += `<li class="text-gray-400">+ ${data.steps.length - 4} more steps...</li>`;
    }
  }

  async function startExtraction(url: string) {
    hideError();
    setExtractBtnLoading();
    showProgress();
    progressStatus!.textContent = 'Starting extraction...';
    progressBar!.style.width = '10%';
    startElapsedTimer();

    try {
      // Call our API to start extraction
      const response = await fetch('/api/extract', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ url }),
      });

      const result = await response.json();

      if (!result.success) {
        throw new Error(result.error || 'Failed to start extraction');
      }

      // If completed immediately, show results
      if (result.status === 'completed' && result.data) {
        stopElapsedTimer();
        progressBar!.style.width = '100%';
        result.data.source_url = url;
        showSaveForm(result.data);
        return;
      }

      // Start polling for results
      if (result.jobId) {
        progressStatus!.textContent = 'Extraction in progress...';
        pollForResults(result.jobId, url);
      } else {
        throw new Error('No job ID returned');
      }
    } catch (error: any) {
      stopElapsedTimer();
      showUrlForm();
      showError(error.message || 'Failed to start extraction');
    }
  }

  async function pollForResults(jobId: string, sourceUrl: string) {
    const maxAttempts = 120; // 2 minutes max with 1 second interval
    let attempts = 0;

    pollInterval = setInterval(async () => {
      attempts++;

      if (attempts > maxAttempts) {
        clearInterval(pollInterval!);
        pollInterval = null;
        stopElapsedTimer();
        showUrlForm();
        showError('Extraction timed out. The page may be too large or complex.');
        return;
      }

      try {
        const response = await fetch(`/api/poll/${jobId}`);
        const result = await response.json();

        if (!result.success && result.status !== 'running') {
          clearInterval(pollInterval!);
          pollInterval = null;
          stopElapsedTimer();
          showUrlForm();
          showError(result.error || 'Extraction failed');
          return;
        }

        // Update status message
        if (result.status === 'running') {
          progressStatus!.textContent = 'Processing page content...';
        } else if (result.status === 'pending') {
          progressStatus!.textContent = 'Waiting to start...';
        }

        // Completed!
        if (result.status === 'completed' && result.data) {
          clearInterval(pollInterval!);
          pollInterval = null;
          stopElapsedTimer();
          progressBar!.style.width = '100%';
          result.data.source_url = sourceUrl;
          showSaveForm(result.data);
        }
      } catch (error: any) {
        // Network error - keep trying
        console.error('Poll error:', error);
      }
    }, 1000);
  }

  // Event listeners
  extractBtn?.addEventListener('click', () => {
    const url = urlInput?.value?.trim();
    if (!url) {
      showError('Please enter a URL');
      return;
    }
    startExtraction(url);
  });

  // Allow Enter key to submit
  urlInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      extractBtn?.click();
    }
  });

  tryAnotherBtn?.addEventListener('click', () => {
    if (pollInterval) {
      clearInterval(pollInterval);
      pollInterval = null;
    }
    stopElapsedTimer();
    urlInput.value = '';
    showUrlForm();
    hideError();
  });
</script>
