---
import Layout from '../layouts/Layout.astro';
import { addTutorial } from '../lib/db';

const db = Astro.locals.runtime.env.DB;

let error: string | null = null;

// Only handle save action server-side - extraction is now client-side async
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'save') {
    const tutorialData = JSON.parse(formData.get('tutorial') as string);

    try {
      const tutorialId = await addTutorial(
        db,
        {
          title: tutorialData.title,
          overview: tutorialData.overview || null,
          image_url: tutorialData.image_url || null,
          difficulty: tutorialData.difficulty || null,
          estimated_time: tutorialData.estimated_time || null,
          source_url: tutorialData.source_url || null,
        },
        // Glossary terms
        (tutorialData.glossary || []).map((term: any) => ({
          term: term.term,
          definition: term.definition,
          context: term.context,
        })),
        // Materials (consumables)
        (tutorialData.materials || []).map((mat: any) => ({
          name: mat.name,
          quantity: mat.quantity,
          notes: mat.notes,
          measurement: mat.measurement,
        })),
        // Tools (reusable equipment)
        (tutorialData.tools || []).map((tool: any) => ({
          name: tool.name,
          notes: tool.notes,
          required: tool.required !== false,
        })),
        // Steps with measurements
        (tutorialData.steps || []).map((step: any) => ({
          step_number: step.step_number,
          title: step.title,
          instructions: step.instructions,
          tips: step.tips,
          image_urls: step.image_urls || [],
          measurements: step.measurements || [],
        }))
      );

      return Astro.redirect(`/tutorial/${tutorialId}`);
    } catch (e) {
      error = 'Failed to save tutorial';
    }
  }
}
---

