    </div>

    <!-- Extracted Data Form (shown after successful extraction) -->
    <form method="POST" id="save-form" class="hidden space-y-6">
      <input type="hidden" name="action" value="save" />
      <input type="hidden" name="tutorial" id="tutorial-data" value="" />

      <div class="card p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Extracted Tutorial</h2>
          <span class="badge badge-success">Ready to save</span>
