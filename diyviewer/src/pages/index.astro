---
import Layout from '../layouts/Layout.astro';
import { getTutorials } from '../lib/db';

const db = Astro.locals.runtime.env.DB;
const tutorials = await getTutorials(db);
---

<Layout title="My Projects">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">My Projects</h1>
        <p class="mt-1 text-gray-600 dark:text-gray-400">
          {tutorials.length} {tutorials.length === 1 ? 'project' : 'projects'} saved
        </p>
      </div>
      <a href="/add" class="btn btn-primary">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Project
      </a>
    </div>
  </div>

  {tutorials.length === 0 ? (
    <div class="text-center py-16">
      <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z" />
      </svg>
      <h2 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No projects yet</h2>
      <p class="mt-2 text-gray-500 dark:text-gray-400">Get started by adding a tutorial from Instructables or other DIY sites</p>
      <a href="/add" class="btn btn-primary mt-4">Add Your First Project</a>
    </div>
  ) : (
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {tutorials.map((tutorial) => (
        <a href={`/tutorial/${tutorial.id}`} class="card group">
          {tutorial.image_url && (
            <div class="aspect-video overflow-hidden">
              <img
                src={tutorial.image_url}
                alt={tutorial.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
          )}
          <div class="p-4">
            <h3 class="font-semibold text-lg text-gray-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
              {tutorial.title}
            </h3>
            {tutorial.overview && (
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                {tutorial.overview}
              </p>
            )}
            <div class="mt-3 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
              {tutorial.difficulty && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                  {tutorial.difficulty}
                </span>
              )}
              {tutorial.estimated_time && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {tutorial.estimated_time}
                </span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  )}
</Layout>
