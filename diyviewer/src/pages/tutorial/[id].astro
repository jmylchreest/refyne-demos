---
import Layout from '../../layouts/Layout.astro';
import { getTutorialById, deleteTutorial, addTutorialToChecklist } from '../../lib/db';

const { id } = Astro.params;
const db = Astro.locals.runtime.env.DB;

// Handle actions
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'delete') {
    await deleteTutorial(db, id!);
    return Astro.redirect('/');
  }

  if (action === 'add-to-checklist') {
    await addTutorialToChecklist(db, id!);
    return Astro.redirect('/checklist');
  }
}

const tutorial = await getTutorialById(db, id!);

if (!tutorial) {
  return Astro.redirect('/');
}
---

<Layout title={tutorial.title}>
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <a href="/" class="text-amber-600 hover:text-amber-700 text-sm font-medium mb-4 inline-flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>

      {tutorial.image_url && (
        <div class="aspect-video rounded-xl overflow-hidden mb-6">
          <img src={tutorial.image_url} alt={tutorial.title} class="w-full h-full object-cover" />
        </div>
      )}

      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{tutorial.title}</h1>

      {tutorial.overview && (
        <p class="mt-3 text-lg text-gray-600 dark:text-gray-400">{tutorial.overview}</p>
      )}

      <div class="mt-4 flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
        {tutorial.difficulty && (
          <span class="flex items-center gap-1 px-3 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 rounded-full">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            {tutorial.difficulty}
          </span>
        )}
        {tutorial.estimated_time && (
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {tutorial.estimated_time}
          </span>
        )}
        {tutorial.source_url && (
          <a href={tutorial.source_url} target="_blank" rel="noopener" class="text-amber-600 hover:underline flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Original
          </a>
        )}
      </div>
    </div>

    <!-- Glossary Section -->
    {tutorial.glossary && tutorial.glossary.length > 0 && (
      <div class="card p-6 mb-8 bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
        <h2 class="text-xl font-bold text-blue-900 dark:text-blue-100 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Glossary
        </h2>
        <p class="text-sm text-blue-700 dark:text-blue-300 mb-4">
          Technical terms and jargon used in this project:
        </p>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {tutorial.glossary.map((term) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg p-3">
              <dt class="font-semibold text-blue-800 dark:text-blue-200">{term.term}</dt>
              <dd class="text-sm text-gray-700 dark:text-gray-300 mt-1">{term.definition}</dd>
              {term.context && (
                <dd class="text-xs text-gray-500 dark:text-gray-400 mt-1 italic">In this project: {term.context}</dd>
              )}
            </div>
          ))}
        </dl>
      </div>
    )}

    <!-- Materials Section -->
    {tutorial.materials.length > 0 && (
      <div class="card p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            Materials
          </h2>
          <span class="text-sm text-gray-500">{tutorial.materials.length} items</span>
        </div>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
          {tutorial.materials.map((mat) => (
            <li class="flex items-start gap-2 text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="flex-1">
                <span>
                  {mat.quantity && <strong>{mat.quantity}</strong>} {mat.name}
                  {mat.measurement && (
                    <span
                      class="ml-1 text-xs px-1.5 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded cursor-help"
                      title={`${mat.measurement.metric} = ${mat.measurement.imperial}`}
                    >
                      {mat.measurement.original}
                    </span>
                  )}
                  {mat.notes && <span class="text-gray-500 text-sm"> ({mat.notes})</span>}
                </span>
              </div>
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Tools Section -->
    {tutorial.tools.length > 0 && (
      <div class="card p-6 mb-8">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Tools
          </h2>
          <form method="POST">
            <input type="hidden" name="action" value="add-to-checklist" />
            <button type="submit" class="btn btn-sm btn-secondary">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Add to Checklist
            </button>
          </form>
        </div>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
          {tutorial.tools.map((tool) => (
            <li class="flex items-start gap-2 text-gray-700 dark:text-gray-300">
              <svg class={`w-5 h-5 mt-0.5 flex-shrink-0 ${tool.required ? 'text-orange-500' : 'text-gray-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {tool.required ? (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                ) : (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                )}
              </svg>
              <div class="flex-1">
                <span>
                  {tool.name}
                  {!tool.required && <span class="text-xs text-gray-400 ml-1">(optional)</span>}
                  {tool.notes && <span class="text-gray-500 text-sm"> - {tool.notes}</span>}
                </span>
              </div>
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Steps -->
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
        Instructions ({tutorial.steps.length} steps)
      </h2>

      <div class="space-y-8">
        {tutorial.steps.map((step, idx) => (
          <div class="card p-6" id={`step-${step.step_number}`}>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-amber-500 text-white rounded-full flex items-center justify-center font-bold text-lg">
                {step.step_number}
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                  {step.title}
                </h3>
                <div class="prose prose-gray dark:prose-invert max-w-none">
                  <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">{step.instructions}</p>
                </div>

                {step.tips && (
                  <div class="mt-4 p-3 bg-amber-50 dark:bg-amber-900/20 border-l-4 border-amber-500 rounded-r">
                    <div class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-amber-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <p class="text-sm text-amber-800 dark:text-amber-200">{step.tips}</p>
                    </div>
                  </div>
                )}

                {step.images.length > 0 && (
                  <div class="mt-4 grid grid-cols-2 md:grid-cols-3 gap-3">
                    {step.images.map((img, imgIdx) => (
                      <a href={img.image_url} target="_blank" rel="noopener" class="block aspect-video rounded-lg overflow-hidden hover:opacity-90 transition-opacity">
                        <img
                          src={img.image_url}
                          alt={`Step ${step.step_number} - Image ${imgIdx + 1}`}
                          class="w-full h-full object-cover"
                          loading="lazy"
                        />
                      </a>
                    ))}
                  </div>
                )}

                {step.helpful_links && step.helpful_links.length > 0 && (
                  <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                    <h4 class="text-sm font-medium text-blue-800 dark:text-blue-300 mb-2 flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                      </svg>
                      Helpful Resources
                    </h4>
                    <ul class="space-y-1">
                      {step.helpful_links.map((link) => (
                        <li>
                          <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-sm text-blue-600 dark:text-blue-400 hover:underline flex items-center gap-2"
                          >
                            {link.type === 'video' && (
                              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                            )}
                            {link.type === 'tutorial' && (
                              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                              </svg>
                            )}
                            {link.type === 'product' && (
                              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                              </svg>
                            )}
                            {link.type === 'reference' && (
                              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                              </svg>
                            )}
                            {link.title}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>

            {/* Step navigation */}
            <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 flex justify-between">
              {idx > 0 ? (
                <a href={`#step-${tutorial.steps[idx - 1].step_number}`} class="text-sm text-amber-600 hover:text-amber-700">
                  ← Previous Step
                </a>
              ) : <span />}
              {idx < tutorial.steps.length - 1 ? (
                <a href={`#step-${tutorial.steps[idx + 1].step_number}`} class="text-sm text-amber-600 hover:text-amber-700">
                  Next Step →
                </a>
              ) : (
                <span class="text-sm text-green-600 font-medium">Project Complete!</span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-3 pb-8">
      <a href="/" class="btn btn-secondary flex-1">Back to Projects</a>
      <form method="POST" onsubmit="return confirm('Are you sure you want to delete this project?');">
        <input type="hidden" name="action" value="delete" />
        <button type="submit" class="btn btn-danger">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </button>
      </form>
    </div>
  </div>
</Layout>

<style>
  /* Smooth scroll for step navigation */
  html {
    scroll-behavior: smooth;
  }
</style>
