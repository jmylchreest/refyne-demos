---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A DIY instruction viewer powered by Refyne' } = Astro.props;

// Check for embed mode and theme
const url = new URL(Astro.request.url);
const isEmbed = url.searchParams.get('embed') === 'true';
const theme = url.searchParams.get('theme'); // 'light', 'dark', or 'auto'

// Build body classes
const bodyClasses = [
  isEmbed ? 'embed' : '',
  theme === 'light' ? 'theme-light' : '',
  theme === 'dark' ? 'theme-dark' : '',
].filter(Boolean).join(' ');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Victor+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet" />
    <title>{title} | DIY Viewer Demo</title>
  </head>
  <body class={bodyClasses}>
    {!isEmbed && (
      <header class="nav-bar bg-white border-b border-gray-200 dark:bg-gray-900 dark:border-gray-700">
        <nav class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">
          <a href="/" class="flex items-center gap-2 text-xl font-bold text-amber-600">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z" />
            </svg>
            DIY Viewer
          </a>
          <div class="flex items-center gap-4">
            <a href="/" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Projects</a>
            <a href="/checklist" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Materials List</a>
            <a href="/add" class="btn btn-primary btn-sm">Add Project</a>
          </div>
        </nav>
      </header>
    )}

    <main class={isEmbed ? '' : 'max-w-5xl mx-auto px-4 py-8'}>
      <slot />
    </main>

    {!isEmbed && (
      <footer class="border-t border-gray-200 mt-12 py-6 dark:border-gray-700">
        <div class="max-w-5xl mx-auto px-4 text-center text-sm text-gray-500">
          <p>
            Powered by <a href="https://refyne.uk" class="text-amber-600 hover:underline refyne-brand" target="_blank" rel="noopener">Refyne</a> —
            Extract structured data from any website
          </p>
          <p class="mt-1">
            <a href="https://docs.refyne.uk/demos/diy-viewer" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" target="_blank" rel="noopener">
              View Documentation →
            </a>
          </p>
        </div>
      </footer>
    )}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
