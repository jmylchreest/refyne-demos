---
import Layout from '../layouts/Layout.astro';
import { addRecipe } from '../lib/db';
import { extractRecipe } from '../lib/refyne';

const db = Astro.locals.runtime.env.DB;
const env = Astro.locals.runtime.env;

let error: string | null = null;
let extractedData: any = null;

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'extract') {
    const url = formData.get('url') as string;

    if (!url) {
      error = 'Please enter a URL';
    } else {
      // Use current site URL as referer (works for both local dev and production)
      const referer = Astro.site?.toString() || Astro.url.origin;
      const result = await extractRecipe(url, env.REFYNE_API_URL, env.DEMO_API_KEY, referer);

      if (!result.success) {
        error = result.error || 'Failed to extract recipe';
      } else {
        extractedData = { ...result.data, source_url: url };
      }
    }
  }

  if (action === 'save') {
    const recipeData = JSON.parse(formData.get('recipe') as string);

    try {
      const recipeId = await addRecipe(
        db,
        {
          title: recipeData.title,
          description: recipeData.description || null,
          image_url: recipeData.image_url || null,
          author: recipeData.author || null,
          author_url: recipeData.author_url || null,
          prep_time: recipeData.prep_time || null,
          cook_time: recipeData.cook_time || null,
          total_time: recipeData.total_time || null,
          servings: recipeData.servings || null,
          source_url: recipeData.source_url || null,
        },
        (recipeData.ingredients || []).map((ing: any, idx: number) => ({
          name: ing.name,
          quantity: ing.quantity || null,
          unit: ing.unit || null,
          notes: ing.notes || null,
          sort_order: idx,
        })),
        (recipeData.instructions || []).map((inst: any) => ({
          step_number: inst.step,
          instruction: inst.text,
          image_urls: inst.image_urls || [],
        }))
      );

      return Astro.redirect(`/recipe/${recipeId}`);
    } catch (e) {
      error = 'Failed to save recipe';
    }
  }
}
---

<Layout title="Add Recipe">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Add Recipe</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      Enter a URL to extract recipe details automatically using <span class="refyne-brand">Refyne</span>
    </p>

    {error && (
      <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg text-red-700 dark:text-red-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {error}
        </div>
      </div>
    )}

    {!extractedData ? (
      <div class="relative">
        <!-- Loading Overlay -->
        <div id="loading-overlay" class="hidden absolute inset-0 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm rounded-lg z-10 flex flex-col items-center justify-center">
          <div class="flex flex-col items-center gap-4">
            <div class="relative">
              <div class="w-16 h-16 border-4 border-indigo-200 dark:border-indigo-900 rounded-full"></div>
              <div class="w-16 h-16 border-4 border-indigo-600 dark:border-indigo-400 rounded-full border-t-transparent animate-spin absolute inset-0"></div>
            </div>
            <div class="text-center">
              <p class="text-lg font-semibold text-gray-900 dark:text-white">Extracting Recipe</p>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Analyzing page content with AI...</p>
            </div>
          </div>
        </div>

        <form method="POST" class="card p-6" id="extract-form">
          <input type="hidden" name="action" value="extract" />

          <label class="block mb-2 font-medium text-gray-700 dark:text-gray-300">
            Recipe URL
          </label>
          <div class="flex gap-3">
            <input
              type="url"
              name="url"
              placeholder="https://publicdomainrecipes.com/recipe/..."
              class="input flex-1"
              required
              id="url-input"
            />
            <button type="submit" class="btn btn-primary whitespace-nowrap" id="extract-btn">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              Extract Recipe
            </button>
          </div>
          <div class="mt-4 p-3 bg-gray-50 dark:bg-gray-800 rounded-lg text-sm">
            <p class="text-gray-600 dark:text-gray-400 mb-2">
              Paste the URL of any webpage containing a recipe. Refyne will automatically extract the ingredients, instructions, and cooking times.
            </p>
            <p class="text-gray-500 dark:text-gray-500">
              Try recipes from{' '}
              <a href="https://publicdomainrecipes.com" target="_blank" rel="noopener" class="text-indigo-600 hover:underline">
                Public Domain Recipes
              </a>
              {' '}(copyright-free) or{' '}
              <a href="https://demo.refyne.uk/recipes" target="_blank" rel="noopener" class="text-indigo-600 hover:underline">
                demo.refyne.uk
              </a>
            </p>
          </div>
        </form>
      </div>
    ) : extractedData.page_type === 'collection' ? (
      <!-- Collection Page Detected -->
      <div class="space-y-6">
        <div class="card p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="p-2 bg-amber-100 dark:bg-amber-900/30 rounded-lg">
              <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Collection Page Detected</h2>
              <p class="text-sm text-gray-500 dark:text-gray-400">This page contains multiple recipes</p>
            </div>
          </div>

          <div class="p-4 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg mb-6">
            <p class="text-sm text-amber-800 dark:text-amber-300">
              <strong>{extractedData.title}</strong> is a recipe collection page, not a single recipe.
              Select one of the recipes below to extract it:
            </p>
          </div>

          {extractedData.recipe_links && extractedData.recipe_links.length > 0 ? (
            <div class="space-y-2">
              <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-3">
                Found {extractedData.recipe_links.length} recipe{extractedData.recipe_links.length !== 1 ? 's' : ''}:
              </h3>
              <div class="grid gap-2">
                {extractedData.recipe_links.map((link: any) => (
                  <form method="POST" class="contents">
                    <input type="hidden" name="action" value="extract" />
                    <input type="hidden" name="url" value={link.url} />
                    <button type="submit" class="w-full text-left p-3 bg-gray-50 dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-indigo-900/30 border border-gray-200 dark:border-gray-700 hover:border-indigo-300 dark:hover:border-indigo-700 rounded-lg transition-colors group">
                      <div class="flex items-center justify-between">
                        <div class="min-w-0 flex-1">
                          <p class="font-medium text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 truncate">
                            {link.title || 'Recipe'}
                          </p>
                          <p class="text-xs text-gray-500 dark:text-gray-400 truncate mt-0.5">{link.url}</p>
                        </div>
                        <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-500 ml-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </button>
                  </form>
                ))}
              </div>
            </div>
          ) : (
            <p class="text-gray-500 dark:text-gray-400 text-center py-4">
              No recipe links found on this page. Try entering a direct recipe URL.
            </p>
          )}
        </div>

        <a href="/add" class="btn btn-secondary w-full">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Try a Different URL
        </a>
      </div>
    ) : (
      <form method="POST" class="space-y-6">
        <input type="hidden" name="action" value="save" />
        <input type="hidden" name="recipe" value={JSON.stringify(extractedData)} />

        <div class="card p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Extracted Recipe</h2>
            <span class="badge badge-success">Ready to save</span>
          </div>

          {extractedData.image_url && (
            <div class="aspect-video rounded-lg overflow-hidden mb-4">
              <img src={extractedData.image_url} alt={extractedData.title} class="w-full h-full object-cover" />
            </div>
          )}

          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">{extractedData.title}</h3>

          {extractedData.description && (
            <p class="mt-2 text-gray-600 dark:text-gray-400">{extractedData.description}</p>
          )}

          <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-500">
            {extractedData.prep_time && <span>Prep: {extractedData.prep_time}</span>}
            {extractedData.cook_time && <span>Cook: {extractedData.cook_time}</span>}
            {extractedData.servings && <span>Servings: {extractedData.servings}</span>}
          </div>

          <div class="mt-6 grid md:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-2">
                Ingredients ({extractedData.ingredients?.length || 0})
              </h4>
              <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                {extractedData.ingredients?.slice(0, 6).map((ing: any) => (
                  <li>â€¢ {ing.quantity} {ing.unit} {ing.name}</li>
                ))}
                {extractedData.ingredients?.length > 6 && (
                  <li class="text-gray-400">+ {extractedData.ingredients.length - 6} more...</li>
                )}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-2">
                Instructions ({extractedData.instructions?.length || 0} steps)
              </h4>
              <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                {extractedData.instructions?.slice(0, 3).map((inst: any) => (
                  <li class="truncate">{inst.step}. {inst.text}</li>
                ))}
                {extractedData.instructions?.length > 3 && (
                  <li class="text-gray-400">+ {extractedData.instructions.length - 3} more steps...</li>
                )}
              </ul>
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="btn btn-primary flex-1">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Save Recipe
          </button>
          <a href="/add" class="btn btn-secondary">Try Another URL</a>
        </div>
      </form>
    )}

    <div class="mt-8 p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
      <h3 class="font-semibold text-indigo-900 dark:text-indigo-300 mb-2">How it works</h3>
      <p class="text-sm text-indigo-700 dark:text-indigo-400">
        This demo uses <a href="https://refyne.uk" class="underline refyne-brand" target="_blank">Refyne</a>'s extraction API to automatically
        parse recipe details from any webpage. The extracted data includes ingredients, instructions, cooking times, and more.
      </p>
    </div>
  </div>
</Layout>

<script>
  // Show loading overlay on extract
  const extractForm = document.getElementById('extract-form');
  const loadingOverlay = document.getElementById('loading-overlay');
  const extractBtn = document.getElementById('extract-btn');
  const urlInput = document.getElementById('url-input');

  // Handle main extract form
  extractForm?.addEventListener('submit', () => {
    if (loadingOverlay) {
      loadingOverlay.classList.remove('hidden');
    }
    if (extractBtn) {
      extractBtn.setAttribute('disabled', 'true');
    }
    // Use readonly instead of disabled so the value still submits
    if (urlInput) {
      urlInput.setAttribute('readonly', 'true');
      urlInput.classList.add('opacity-50', 'cursor-not-allowed');
    }
  });

  // Handle collection page recipe link clicks
  document.querySelectorAll('form.contents').forEach((form) => {
    form.addEventListener('submit', (e) => {
      const btn = form.querySelector('button');
      if (btn) {
        // Show loading state on the clicked button
        btn.innerHTML = `
          <div class="flex items-center justify-center w-full">
            <div class="w-5 h-5 border-2 border-indigo-200 dark:border-indigo-700 rounded-full border-t-indigo-600 dark:border-t-indigo-400 animate-spin mr-3"></div>
            <span class="text-gray-600 dark:text-gray-300">Extracting...</span>
          </div>
        `;
        btn.setAttribute('disabled', 'true');
        btn.classList.add('opacity-75', 'cursor-wait');
      }
      // Disable all other buttons
      document.querySelectorAll('form.contents button').forEach((otherBtn) => {
        if (otherBtn !== btn) {
          otherBtn.setAttribute('disabled', 'true');
          otherBtn.classList.add('opacity-50');
        }
      });
    });
  });
</script>
