---
import Layout from '../layouts/Layout.astro';
import { getShoppingList, toggleShoppingItem, removeShoppingItem, clearShoppingList } from '../lib/db';

const db = Astro.locals.runtime.env.DB;

// Handle POST actions
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'toggle') {
    const id = formData.get('id') as string;
    await toggleShoppingItem(db, id);
  }

  if (action === 'remove') {
    const id = formData.get('id') as string;
    await removeShoppingItem(db, id);
  }

  if (action === 'clear') {
    await clearShoppingList(db);
  }

  // Redirect to refresh the page
  return Astro.redirect('/shopping-list');
}

const items = await getShoppingList(db);
const uncheckedCount = items.filter(i => !i.checked).length;
const checkedCount = items.filter(i => i.checked).length;
---

<Layout title="Shopping List">
  <div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Shopping List</h1>
        <p class="mt-1 text-gray-600 dark:text-gray-400">
          {uncheckedCount} items to buy{checkedCount > 0 && `, ${checkedCount} checked off`}
        </p>
      </div>

      {items.length > 0 && (
        <form method="POST" onsubmit="return confirm('Clear all items from your shopping list?')">
          <input type="hidden" name="action" value="clear" />
          <button type="submit" class="btn btn-secondary btn-sm">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Clear All
          </button>
        </form>
      )}
    </div>

    {items.length === 0 ? (
      <div class="text-center py-16">
        <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h2 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">Shopping list is empty</h2>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Add ingredients from a recipe to get started</p>
        <a href="/" class="btn btn-primary mt-4">Browse Recipes</a>
      </div>
    ) : (
      <div class="space-y-3">
        {items.filter(i => !i.checked).map((item) => (
          <div class="shopping-item">
            <form method="POST" class="flex-shrink-0">
              <input type="hidden" name="action" value="toggle" />
              <input type="hidden" name="id" value={item.id} />
              <button type="submit" class="checkbox-custom border-2 border-gray-300 hover:border-indigo-500">
              </button>
            </form>
            <div class="flex-1 min-w-0">
              <span class="item-name text-gray-900 dark:text-white">
                {item.quantity && <strong>{item.quantity}</strong>}
                {item.unit && ` ${item.unit}`}
                {' '}{item.ingredient_name}
              </span>
            </div>
            <form method="POST">
              <input type="hidden" name="action" value="remove" />
              <input type="hidden" name="id" value={item.id} />
              <button type="submit" class="text-gray-400 hover:text-red-500 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </form>
          </div>
        ))}

        {checkedCount > 0 && (
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-3">
              Checked ({checkedCount})
            </h3>
            {items.filter(i => i.checked).map((item) => (
              <div class="shopping-item checked mb-3">
                <form method="POST" class="flex-shrink-0">
                  <input type="hidden" name="action" value="toggle" />
                  <input type="hidden" name="id" value={item.id} />
                  <button type="submit" class="checkbox-custom bg-indigo-600 border-indigo-600 text-white flex items-center justify-center">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                  </button>
                </form>
                <div class="flex-1 min-w-0">
                  <span class="item-name">
                    {item.quantity && <strong>{item.quantity}</strong>}
                    {item.unit && ` ${item.unit}`}
                    {' '}{item.ingredient_name}
                  </span>
                </div>
                <form method="POST">
                  <input type="hidden" name="action" value="remove" />
                  <input type="hidden" name="id" value={item.id} />
                  <button type="submit" class="text-gray-400 hover:text-red-500 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </form>
              </div>
            ))}
          </div>
        )}
      </div>
    )}
  </div>
</Layout>
