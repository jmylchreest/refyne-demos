---
import Layout from '../layouts/Layout.astro';
import { getRecipes } from '../lib/db';

const db = Astro.locals.runtime.env.DB;
const recipes = await getRecipes(db);
---

<Layout title="My Recipes">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">My Recipes</h1>
        <p class="mt-1 text-gray-600 dark:text-gray-400">
          {recipes.length} {recipes.length === 1 ? 'recipe' : 'recipes'} saved
        </p>
      </div>
      <a href="/add" class="btn btn-primary">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Recipe
      </a>
    </div>
  </div>

  {recipes.length === 0 ? (
    <div class="text-center py-16">
      <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
      </svg>
      <h2 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No recipes yet</h2>
      <p class="mt-2 text-gray-500 dark:text-gray-400">Get started by adding a recipe from a URL</p>
      <a href="/add" class="btn btn-primary mt-4">Add Your First Recipe</a>
    </div>
  ) : (
    <div class="recipe-grid">
      {recipes.map((recipe) => (
        <a href={`/recipe/${recipe.id}`} class="card group">
          {recipe.image_url && (
            <div class="aspect-video overflow-hidden">
              <img
                src={recipe.image_url}
                alt={recipe.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
          )}
          <div class="p-4">
            <h3 class="font-semibold text-lg text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
              {recipe.title}
            </h3>
            {recipe.description && (
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                {recipe.description}
              </p>
            )}
            <div class="mt-3 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
              {recipe.total_time && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {recipe.total_time}
                </span>
              )}
              {recipe.servings && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  {recipe.servings} servings
                </span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  )}
</Layout>
